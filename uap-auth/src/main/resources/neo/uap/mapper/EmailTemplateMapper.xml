<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="neo.uap.mapper.EmailTemplateMapper">
    <resultMap id="emailTemplateResultMap" type="neo.uap.domain.system.EmailTemplate">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="subject" column="subject"/>
        <result property="content" column="content"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdOn" column="created_on"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedOn" column="updated_on"/>
    </resultMap>

    <select id="get" resultMap="emailTemplateResultMap">
        select id,
        name,
        subject,
        content,
        created_by,
        created_on,
        updated_by,
        updated_on
        from email_template
        where name = #{name}
    </select>
</mapper>